<% layout('../../layout') -%>

<section id="page-header">
    <div class="container">
        <h4 class="text-center"><%= company.phones[0].number + " | " + company.phones[1].number %></h4>
        <h1><%= article.title.main %></h1>
        <p class="lead"><%= article.title.secondary %></p>
        <% include ../../partials/breadcrumbs.ejs %>
    </div>
</section>

<section id="content">
    <div class="container">
        <form action="/blog/insert" method="post" enctype="multipart/form-data" role="form">
            <div class="form-group">
                <label for="title-main">Заголовок</label>
                <input type="text" class="form-control" id="title-main" name="main" required>
            </div>
            <div class="form-group">
                <label for="title-secondary">Подзаголовок</label>
                <input type="text" class="form-control" id="title-secondary" name="secondary">
            </div>
            <div class="form-group">
                <label for="body-text">Текст (полный)</label>
                <textarea rows="6" class="form-control" id="body-text" name="text"></textarea>
            </div>
            <div class="form-group">
                <label for="body-summary">Текст (краткий)</label>
                <textarea rows="3" class="form-control" id="body-summary" name="summary"></textarea>
            </div>
            <div class="form-group">
                <input type="file" name="media" multiple="multiple">
            </div>
            <div class="form-group">
                <label for="location">Расположение</label>
                <input type="text" class="form-control" id="location" name="location" value="blog/entries">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Опубликовать</button>
            </div>
        </form>
        <div id="alert-blog-add" class="alert alert-danger alert-dismissible hidden" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            Произошла ошибка!
        </div>
    </div>
</section>

